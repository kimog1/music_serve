<view style="background: #f7f7f6;height: 100vh;">
  <view class="image_box" wx:if="{{userInfo == ''}}">
    <image src="/image/personal/个人中心.png"></image>
    <view class="login">
      <text bindtap="toLogin">立即登录></text>
    </view>
  </view>
  <view class="image_box" wx:else>
    <image src="{{userInfo.avatarUrl}}"></image>
    <view class="login">
      <text>{{userInfo.nickname}}</text>
    </view>
  </view>
  <!-- 收藏音乐 -->
  <view class="love_music" bindtap="goDetail">
    <view class="love_music_image">
      <image src="/image/personal/喜爱.png" wx:if="{{ like_list == ''}}"></image>
      <image src="{{like_list.coverImgUrl}}" wx:else style="width: 100%;height: 100%;border-radius: 30rpx;"></image>
    </view>
    <view class="love_music_text">
      <text>我喜欢的音乐</text>
      <text style="color:#a5a5a5;font-size: 26rpx;padding-top: 10rpx;">{{like_list?like_list.trackCount:0}}首</text>
    </view>
    <view class="love_music_mode"> 
      <image src="/image/personal/心动.png"></image>
      <text>心动模式</text>
    </view>
  </view>
  <button style="color: #fff;background: #cc4439;" bindtap="out">退出登录</button>
</view>