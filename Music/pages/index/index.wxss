.body {
  background-color: #f8f8f8;
  width: 100%;
  height: 100vh;
}

swiper {
  width: 96%;
  height: 300rpx;
  margin: 10rpx auto;
}

swiper swiper-item {
  width: 100%;
  position: relative;
}

swiper-item image {
  border-radius: 20rpx;
  display: block;
  width: 100%;
  height: 100%;
}

swiper-item text {
  position: absolute;
  bottom: 0rpx;
  padding: 0 15rpx;
  right: 0rpx;
  font-size: 26rpx;
  color: white;
  border-radius: 20rpx 0;
}

.icon_banner {
  white-space: nowrap;
  border-bottom: 1rpx solid #e5e5e5;
}

.icon_banner ul {
  display: flex;
}

.icon_banner ul li {
  width: 100rpx;
  height: 125rpx;
  margin: 30rpx 30rpx;
  text-align: center;
}

.image_box {
  margin: auto;
  width: 90rpx;
  height: 90rpx;
  background-color: #fdf4f5;
  position: relative;
  border-radius: 50%;
}

.icon_banner ul li image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 15rpx;
  left: 15rpx;
}

.icon_banner ul li text {
  font-size: 23rpx;
  color: #747474;
  text-align: center;
}

.recommend_list {
  padding: 15px 30rpx;
  background-color: white;
  border-radius: 0 0 50rpx 50rpx;
}

.recommend_list_head {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: 900;
  padding-bottom: 30rpx;
}

.recommend_list_head_more {
  border: 1rpx solid #e5e5e5;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 300;
  padding: 5rpx 20rpx;
}

.recommend_list_banner ul {
  display: flex;
}

.recommend_list_banner ul li {
  height: 270rpx;
  position: relative;
  padding-right: 30rpx;
}

.recommend_list_banner image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}

.recommend_list_banner text {
  position: absolute;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
  width: 200rpx;
  font-size: 26rpx;
  top: 200rpx;
  left: 0rpx;
  text-overflow: ellipsis;
}