/* pages/play_music/play_music.wxss */
.body {
  height: 100vh;
  width: 100%;
  background-position: center;
}

.body::before {
  content: "";
  position: absolute;
  /* 一定要用绝对定位 */
  width: 100%;
  height: 100%;
  backdrop-filter: blur(50px);
  z-index: 0;
  /* 模糊半径 */
}

.head {
  padding: 0 40rpx;
  position: relative;
}

.head_left {
  float: left;
}

.head_right {
  text-align: center;
  color: white;
  color: 36rpx;
  width: 100%;
}

.icon-xiangxia {
  font-size: 60rpx;
  color: #f7f7f8;
}

.main {
  width: 100%;
  height: 70vh;
  justify-content: center;
  align-items: center;
  position: relative;
}

.circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f7f7f8;
  position: absolute;
  top: 65rpx;
  left: 350rpx;
  z-index: 3;
}

/* 别针动画 */
.needle {
  position: absolute;
  top: 100rpx;
  left: 340rpx;
  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: 1s;
  z-index: 2;
}

.needleRotate {
  transform: rotate(0deg);
}

.pic {
  position: absolute;
  width: 320rpx;
  height: 320rpx;
  top: 340rpx;
  left: 220rpx;
}

.disc {
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  top: 250rpx;
  left: 130rpx;
}

.discAnimation {
  animation: pic 17s linear infinite;
  animation-delay: 1s;
}

@keyframes pic {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.foot {
  margin-top: 50rpx;
  position: relative;
}

.progress-box {
  display: flex;
  width: 80%;
  margin: 0 auto;
  align-items: center;
}

.progress-box text {
  color: white;
}

.process {
  width: 100%;
}

.controlList {
  padding-top: 40rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.controlList text {
  font-size: 70rpx;
  color: #f7f7f8;
}

.controlList text.big {
  font-size: 100rpx;
}