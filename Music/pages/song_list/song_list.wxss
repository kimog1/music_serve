.body{
  position: relative;
  height: 100%;
}
.head_bg {
  width: 100%;
  height: 400rpx;
  background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.00) 0%, #000000 100%);
  border-bottom-left-radius: 50% 5%;
  border-bottom-right-radius: 50% 5%;
}

.bg {
  width: 100%;
  height: 360rpx;
  background-size: 50%;
  background-position: center;
  filter: blur(50rpx);
  overflow: hidden;
}

.head {
  display: flex;
  width: 100%;
}

.head image {
  position: absolute;
  z-index: 2;
  margin: 5%;
  top: 0;
  width: 240rpx;
  height: 240rpx;
  border-radius: 30rpx;
  filter: none;
}

.head text {
  position: absolute;
  top: 0;
  left: 270rpx;
  margin: 5%;
  color: white;
  font-size: 36rpx;
}

.head_userinfo image {
  top: 70rpx;
  left: 270rpx;
  width: 50rpx;
  height: 50rpx;
}

.head_userinfo text {
  top: 75rpx;
  left: 330rpx;
  font-size: 30rpx;
  color: #ccc;
}

.content {
  margin-top: 20rpx;
}

.content_play {
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
  /* border-bottom: 1rpx solid #b8b8b8; */
}

.content_play image {
  width: 48rpx;
  height: 48rpx;
}

.content_left {
  padding: 0 30rpx;
  display: flex;
  position: relative;
}

.content_left text {
  font-size: 36rpx;
  font-weight: 900;
}

.song_num {
  color: rgb(15, 15, 15);
  position: absolute;
  right: -70rpx;
}

.content_right image {
  padding-right: 30rpx;
  width: 38rpx;
  height: 38rpx;
}

.content_main {
  display: flex;
  align-items: center;
  width: 100%;
  height: 130rpx;
  overflow: hidden;
}

.song_name {
  width: 510rpx;
}

.song_index {
  font-size: 50rpx;
  margin: 20rpx 40rpx;
  height: 40rpx;
  width: 80rpx;
  text-align: center;
  color: #b8b8b8;
}

.singer_name {
  height: 45rpx;
  overflow: hidden;
}

.singer_name text {
  font-size: 26rpx;
  font-weight: 600;
  color: rgb(56, 55, 55);
}

.song_name_text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  padding: 20rpx 0;
  color: black;
  height: 36rpx;
  overflow: hidden;
}

.song_icon {
  flex: 1;
  display: flex;
  justify-content: space-evenly;
}

.song_icon image {
  width: 50rpx;
  height: 50rpx;

}

.foot {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background-color: white;
}

.foot_left {
  display: flex;
  align-items: center;
  width: 600rpx;
}

.foot_left_image {
  margin: 0rpx 50rpx;
  border-radius: 100rpx;
}

.foot_left_image image {
  width: 100rpx;
  height: 100rpx;

}

.foot_left_text {
  height: 45rpx;
  overflow: hidden;
}